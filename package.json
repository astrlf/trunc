{
  "name": "trunc",
  "type": "module",
  "main": "src/index.ts",
  "author": "astrlf",
  "version": "1.0.0",
  "license": "MIT",
  "description": "a small url shortener",
  "scripts": {
    "dev": "tsx --watch .",
    "build": "tsc",
    "db:up": "docker-compose up -d",
    "db:migrate": "prisma migrate dev",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@prisma/client": "5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.1",
    "prettier": "^3.0.2",
    "prisma": "^5.1.1",
    "tsx": "^3.12.7"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "printWidth": 120,
    "endOfLine": "lf",
    "tabWidth": 2,
    "semi": true
  }
}
